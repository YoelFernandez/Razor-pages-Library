@page
@model AppBiblioteca.Pages.Prestamos.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Prestamo</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Prestamo.Libro)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Prestamo.Libro.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Prestamo.FechaPrestamo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Prestamo.FechaPrestamo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Prestamo.FechaDevolucion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Prestamo.FechaDevolucion)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Prestamo.Id" />
        <button type="submit" class="btn btn-danger"><i class="fa-solid fa-trash"></i>&nbsp;Eliminar</button>
        <a asp-page="./Index" class="btn btn-secondary"><i class="fa-solid fa-circle-left"></i>&nbsp;Regresar</a>
    </form>
</div>
