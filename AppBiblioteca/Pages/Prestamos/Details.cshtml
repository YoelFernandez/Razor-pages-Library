    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Prestamo</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Prestamo.Libro)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Prestamo.Libro.Titulo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Prestamo.FechaPrestamo)
        </dt>
