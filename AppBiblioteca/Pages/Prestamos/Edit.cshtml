@page
@model AppBiblioteca.Pages.Prestamos.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Prestamo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Prestamo.Id" />
            <div class="form-group">
                <label asp-for="Prestamo.LibroId" class="control-label"></label>
                <select asp-for="Prestamo.LibroId" class="form-control" asp-items="ViewBag.LibroId"></select>
                <span asp-validation-for="Prestamo.LibroId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prestamo.FechaPrestamo" class="control-label"></label>
                <input asp-for="Prestamo.FechaPrestamo" class="form-control" type="date"/>
                <span asp-validation-for="Prestamo.FechaPrestamo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prestamo.FechaDevolucion" class="control-label"></label>
                <input asp-for="Prestamo.FechaDevolucion" class="form-control" type="date" />
                <span asp-validation-for="Prestamo.FechaDevolucion" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <button type="submit" class="btn btn-success">
                    <i class="fa-solid fa-floppy-disk"></i>&nbsp;Guardar
                </button>

                <a asp-page="./Index" class="btn btn-secondary"><i class="fa-solid fa-circle-left"></i>&nbsp;Regresar</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
