@page
@model AppBiblioteca.Pages.Autores.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Autor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Autor.Id" />
            <div class="form-group">
                <label asp-for="Autor.Nombre" class="control-label"></label>
                <input asp-for="Autor.Nombre" class="form-control" />
                <span asp-validation-for="Autor.Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Autor.FechaNacimiento" class="control-label"></label>
                <input asp-for="Autor.FechaNacimiento" class="form-control" />
                <span asp-validation-for="Autor.FechaNacimiento" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <button type="submit" class="btn btn-success">
                    <i class="fa-solid fa-floppy-disk"></i>&nbsp;Guardar
                </button>

                <a asp-page="./Index" class="btn btn-secondary"><i class="fa-solid fa-circle-left"></i>&nbsp;Regresar</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
